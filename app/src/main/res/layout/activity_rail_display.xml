<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9B59B6"
    tools:context="com.example.bhonesh.bot.RailDisplay">

    <Button
        android:id="@+id/train_between"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignLeft="@+id/seat_avail"
        android:layout_alignStart="@+id/seat_avail"
        android:layout_below="@+id/imageView4"

        android:layout_marginTop="39dp"
        android:text="train b/w station"
        android:textSize="15sp"
        android:background="#F0B27A"/>

    <Button
        android:id="@+id/seat_avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pnr_check"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="49dp"
        android:text="seat availability"
        android:textSize="15sp"
        android:background="#F0B27A"/>

    <Button
        android:id="@+id/pnr_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignEnd="@+id/seat_avail"
        android:layout_alignLeft="@+id/seat_avail"
        android:layout_alignRight="@+id/seat_avail"
        android:layout_alignStart="@+id/seat_avail"
        android:text="pnr check"
        android:textSize="15sp"
        android:background="#F0B27A"/>

    <Button
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seat_avail"
        android:layout_alignLeft="@+id/seat_avail"
        android:layout_alignRight="@+id/seat_avail"
        android:layout_alignStart="@+id/seat_avail"
        android:layout_below="@+id/seat_avail"
        android:layout_marginTop="37dp"
        android:text="train route"
        android:textSize="15sp"
        android:background="#F0B27A"
        />

    <Button
        android:id="@+id/fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/route"
        android:layout_alignLeft="@+id/train_between"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/route"
        android:layout_alignStart="@+id/train_between"
        android:layout_marginBottom="31dp"
        android:background="#F0B27A"
        android:text="fare"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:src="@drawable/train" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/seat_avail"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:src="@drawable/chair" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/route"
        android:src="@drawable/travel" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/train_between"
        android:src="@drawable/metro" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fare"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:src="@drawable/cash" />

</RelativeLayout>
